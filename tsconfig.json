{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "./eslint.config.js",
        "./test.js",
        "node_modules",
        "lib/"
    ]
}
